s = raw_input().split()
a = float(s[0])
b = float(s[1])

if a == 1:
    print 'Total: R$ {:.2f}'.format(4.00 * b)

elif a == 2:
    print 'Total: R$ {:.2f}'.format(4.50 * b)

elif a == 3:
    print 'Total: R$ {:.2f}'.format(5.00 * b)

elif a == 4:
    print 'Total: R$ {:.2f}'.format(2.00 * b)

elif a == 5:
    print 'Total: R$ {:.2f}'.format(1.50 * b)
